code = "shader_type spatial;

uniform sampler2D noise_texture;
uniform vec3 object_color;

float hash(vec2 p) {
  return fract(sin(dot(p * 17.17, vec2(14.91, 67.31))) * 4791.9511);
}

float noise(vec2 x) {
  vec2 p = floor(x);
  vec2 f = fract(x);
  f = f * f * (3.0 - 2.0 * f);
  vec2 a = vec2(1.0, 0.0);
  return mix(mix(hash(p + a.yy), hash(p + a.xy), f.x),
         mix(hash(p + a.yx), hash(p + a.xx), f.x), f.y);
}

float fbm(vec2 x) {
  float height = 0.0;
  float amplitude = 0.5;
  float frequency = 3.0;
  for (int i = 0; i < 6; i++){
    height += noise(x * frequency) * amplitude;
    amplitude *= 0.5;
    frequency *= 2.0;
  }
  return height;
}

void fragment() {
	ALBEDO = COLOR.xyz;
	ALPHA = COLOR[3];
}

void vertex() {
	vec4 texture_color = texture(noise_texture, UV);
	COLOR = vec4(object_color, length(texture_color) / 2.0);
	COLOR = vec4(object_color, texture_color.x * 1.0);
	float height = fbm(VERTEX.xz * 4.0 * sin(TIME));
	float width = fbm(VERTEX.xy * 4.0 * cos(TIME));
	float leng = fbm(VERTEX.yz * 4.0 * sin(TIME) * cos(TIME));
	VERTEX.y += height * 0.5;
	VERTEX.x += leng * 0.5;
	VERTEX.z += width * 0.5;
}"

